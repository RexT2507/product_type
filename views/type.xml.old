<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="action_types" model="ir.actions.act_window">
        <field name="name">Type Produit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">kanban,tree,form,activity</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a contact in your address book
          </p><p>
            Odoo helps you to easily track all activities related to a customer.
          </p>
        </field>
    </record>
    <record id="action_types_view_kanban" model="ir.actions.act_window.view">
        <field name="sequence" eval="0"/>
        <field name="view_mode">kanban</field>
        <field name="view_id" ref="base.res_partner_kanban_view"/>
        <field name="act_window_id" ref="action_types"/>
    </record>
    <record id="action_types_view_tree" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="base.view_partner_tree"/>
        <field name="act_window_id" ref="action_types"/>
    </record>
    <record id="action_types_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
      <!--  <field name="arch" type="xml">
            <form>
             <group>
                <field name="name" string="Name" placeholder="Ex name : SucrÃ©" style=" max-width: 1150px;  width: 500px"/>
             </group>
            </form>
	</field>-->
        <field name="act_window_id" ref="action_types"/>
    </record>

    <record id="action_types_summary" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_type">form</field>
        <field name="view_mode">activity,kanban,tree,form</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a contact in your address book
            </p><p>
                Odoo helps you to easily track all activities related to a customer.
            </p>
        </field>
    </record>

    <menuitem name="Type de produit"
        id="menu_types"
        sequence="4"
        web_icon="Type_Produit,static/description/icon.png"
        groups="base.group_user,base.group_partner_manager"/>

    <menuitem id="res_partner_menu_types"
        name="Type de produit"
        action="action_types"
        parent="menu_types"
        sequence="2"/>

</odoo>
